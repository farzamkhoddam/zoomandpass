<script is:inline>
  // Simple Reviews Carousel
  document.addEventListener("DOMContentLoaded", function () {
    let currentSlide = 0;
    const slides = document.querySelectorAll(".review-slide");
    const totalSlides = slides.length;
    const carousel = document.getElementById("reviews-carousel");
    const prevBtn = document.getElementById("review-prev");
    const nextBtn = document.getElementById("review-next");
    const prevBtnMobile = document.getElementById("review-prev-mobile");
    const nextBtnMobile = document.getElementById("review-next-mobile");
    const dots = document.querySelectorAll(".review-dot");

    if (!carousel || totalSlides === 0) return;

    function showSlide(index) {
      if (index < 0) {
        currentSlide = totalSlides - 1;
      } else if (index >= totalSlides) {
        currentSlide = 0;
      } else {
        currentSlide = index;
      }

      const translateX = -currentSlide * 100;
      carousel.style.transform = "translateX(" + translateX + "%)";

      // Update dots
      dots.forEach(function (dot, i) {
        if (i === currentSlide) {
          dot.classList.remove("bg-gray-300");
          dot.classList.add("bg-cyan-600");
          dot.style.width = "12px";
        } else {
          dot.classList.remove("bg-cyan-600");
          dot.classList.add("bg-gray-300");
          dot.style.width = "8px";
        }
      });
    }

    function nextSlide() {
      showSlide(currentSlide + 1);
    }

    function prevSlide() {
      showSlide(currentSlide - 1);
    }

    // Event listeners
    if (nextBtn) nextBtn.addEventListener("click", nextSlide);
    if (prevBtn) prevBtn.addEventListener("click", prevSlide);
    if (nextBtnMobile) nextBtnMobile.addEventListener("click", nextSlide);
    if (prevBtnMobile) prevBtnMobile.addEventListener("click", prevSlide);

    dots.forEach(function (dot, index) {
      dot.addEventListener("click", function () {
        showSlide(index);
      });
    });

    // Initialize
    showSlide(0);
  });
</script>

