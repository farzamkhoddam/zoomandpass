---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Zoom & Pass - Driving Lessons in Camden & Gregory Hills', description = 'Friendly, patient driving lessons in Camden, Gregory Hills & nearby. Drive Smart. Pass Fast. Learn with Confidence.' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, -apple-system, sans-serif;
	}
</style>
