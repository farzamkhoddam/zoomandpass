---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Book Your Lesson - Zoom & Pass">
  <Header />

  <div class="min-h-screen bg-gray-50 py-16 pb-24 md:pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-cyan-600 mb-8">
        Book Your Lesson
      </h1>
      <p class="text-center text-gray-600 mb-8">
        Select a date and time that works for you
      </p>

      <!-- Pricing Information -->
      <div class="max-w-4xl mx-auto mb-8">
        <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8 border-2 border-cyan-100">
          <h2 class="text-2xl md:text-3xl font-bold text-center text-cyan-600 mb-6">
            Pricing
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Hourly Rate -->
            <div class="text-center p-6 bg-gray-50 rounded-xl border border-gray-200">
              <div class="text-4xl font-bold text-yellow-400 mb-2">$60</div>
              <p class="text-gray-700 font-semibold mb-1">Per Hour</p>
              <p class="text-sm text-gray-600">Standard hourly rate</p>
            </div>
            <!-- Package Deal -->
            <div class="text-center p-6 bg-cyan-50 rounded-xl border-2 border-cyan-300 relative">
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                <span class="bg-cyan-600 text-white px-3 py-1 rounded-full text-xs font-bold">Best Value</span>
              </div>
              <div class="text-4xl font-bold text-yellow-400 mb-2">$250</div>
              <p class="text-gray-700 font-semibold mb-1">5-Hour Package</p>
              <p class="text-sm text-gray-600">Save $50 total</p>
              <p class="text-xs text-gray-500 mt-2">($50 per hour)</p>
            </div>
          </div>
        </div>
      </div>

      <div class="booking-container max-w-4xl mx-auto">
        <!-- Calendly inline widget -->
        <div
          class="calendly-inline-widget"
          data-url="https://calendly.com/farzamfara85/30min"
          style="min-width:320px;height:700px;">
        </div>
      </div>
    </div>
  </div>

  <Footer />

  <!-- Calendly script -->
  <script
    type="text/javascript"
    src="https://assets.calendly.com/assets/external/widget.js"
    async></script>
</Layout>

<style>
  /* Button styles - Yellow for CTAs */
  .btn-primary {
    background-color: #facc15; /* Yellow 400 */
    color: #000;
  }

  .btn-primary:hover {
    background-color: #eab308; /* Yellow 500 */
  }

  /* Ensure minimum font size for readability */
  body {
    font-size: 16px;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Add padding bottom on mobile to account for sticky button */
  @media (max-width: 768px) {
    body {
      padding-bottom: 80px;
    }
  }

  /* Booking calendar should fit one screen scroll on mobile */
  @media (max-width: 768px) {
    .booking-container {
      max-height: calc(100vh - 200px);
      overflow-y: auto;
    }

    .calendly-inline-widget {
      height: 600px !important;
    }
  }

  /* Calendly widget styling */
  .calendly-inline-widget {
    border-radius: 1rem;
    overflow: hidden;
  }
</style>
