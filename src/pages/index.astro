    class="relative min-h-screen flex items-center justify-center bg-linear-to-br from-cyan-50 to-cyan-100">
    <div class="container mx-auto px-4 py-16 md:py-24">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <!-- Hero Image -->
        <div class="order-2 md:order-1">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img
              src="/IMG_7083.jpeg"
              alt="Nas with Toyota Corolla - Zoom & Pass"
              class="w-full h-auto object-cover"
            />
          </div>
        </div>

        <!-- Hero Content -->
        <div class="order-1 md:order-2 text-center md:text-left">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-cyan-600 mb-6 leading-tight">
            Drive Smart. Pass Fast. Learn with Confidence.
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 mb-8 leading-relaxed">
            Friendly, patient driving lessons in Camden, Gregory Hills & nearby.
          </p>
          <a
            href="/booking"
            class="inline-block font-bold py-4 px-8 rounded-lg text-lg transition-colors shadow-lg hover:shadow-xl mb-4 md:mb-0 btn-primary">
            Book Your Lesson Now ‚Üí
