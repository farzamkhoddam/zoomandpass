---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Lessons & Pricing - Zoom & Pass">
  <Header />

  <!-- Sticky Book Now Button (Mobile) -->
  <a
    href="/booking"
    class="fixed bottom-0 left-0 right-0 z-50 font-bold py-4 px-6 text-center text-lg shadow-lg md:hidden transition-colors btn-primary">
    Book Now
  </a>

  <!-- Hero Section -->
  <section class="bg-linear-to-r from-cyan-500 to-cyan-600 text-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Lessons & Pricing</h1>
        <p class="text-xl text-cyan-100">
          Flexible packages to suit your learning needs
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Cards Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Beginner Package -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-gray-100 hover:border-cyan-300 transition-colors">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Beginner Package</h3>
            <div class="text-4xl font-bold text-yellow-400 mb-1">10 Hours</div>
            <p class="text-gray-600 text-sm">Perfect for new drivers</p>
          </div>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Basic driving fundamentals</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Parking & maneuvering</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Road safety basics</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Dual control car included</span>
            </li>
          </ul>
          <div class="text-center">
            <div class="text-3xl font-bold text-yellow-400 mb-2">$XXX</div>
            <p class="text-gray-500 text-sm mb-6">Per package</p>
            <a
              href="/booking"
              class="block w-full bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-3 px-6 rounded-xl transition-colors shadow-lg text-center">
              Book Now
            </a>
          </div>
        </div>

        <!-- Intermediate Package -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-cyan-300 relative">
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <span class="bg-cyan-600 text-white px-4 py-1 rounded-full text-sm font-bold">Most Popular</span>
          </div>
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Intermediate Package</h3>
            <div class="text-4xl font-bold text-yellow-400 mb-1">20 Hours</div>
            <p class="text-gray-600 text-sm">Best value for comprehensive training</p>
          </div>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Everything in Beginner Package</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Highway & freeway driving</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Complex traffic situations</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Extended practice time</span>
            </li>
          </ul>
          <div class="text-center">
            <div class="text-3xl font-bold text-yellow-400 mb-2">$XXX</div>
            <p class="text-gray-500 text-sm mb-6">Per package</p>
            <a
              href="/booking"
              class="block w-full bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-3 px-6 rounded-xl transition-colors shadow-lg text-center">
              Book Now
            </a>
          </div>
        </div>

        <!-- Test Prep Package -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-gray-100 hover:border-cyan-300 transition-colors">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Test Prep Package</h3>
            <div class="text-4xl font-bold text-yellow-400 mb-1">5 Hours</div>
            <p class="text-gray-600 text-sm">Focused test preparation</p>
          </div>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Test route practice</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Common test scenarios</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Confidence building</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-cyan-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Pre-test assessment</span>
            </li>
          </ul>
          <div class="text-center">
            <div class="text-3xl font-bold text-yellow-400 mb-2">$XXX</div>
            <p class="text-gray-500 text-sm mb-6">Per package</p>
            <a
              href="/booking"
              class="block w-full bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-3 px-6 rounded-xl transition-colors shadow-lg text-center">
              Book Now
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-cyan-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Start Your Driving Journey?</h2>
      <p class="text-xl mb-8 text-cyan-100">
        Book your lesson online and take the first step towards confident driving
      </p>
      <a
        href="/booking"
        class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-4 px-8 rounded-xl text-lg transition-colors shadow-lg hover:shadow-xl">
        Book Online Now â†’
      </a>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Button styles - Yellow for CTAs */
  .btn-primary {
    background-color: #facc15; /* Yellow 400 */
    color: #000;
  }

  .btn-primary:hover {
    background-color: #eab308; /* Yellow 500 */
  }

  /* Ensure minimum font size for readability */
  body {
    font-size: 16px;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Add padding bottom on mobile to account for sticky button */
  @media (max-width: 768px) {
    body {
      padding-bottom: 80px;
    }
  }
</style>

